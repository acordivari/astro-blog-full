---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TagList from '../../components/TagList.astro';
import { getCollection } from 'astro:content';
import { getBrandSlug } from '../../content/brands';

export async function getStaticPaths() {
  const reviews = await getCollection('reviews');
  return reviews.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const brandSlug = post.data.brand ? getBrandSlug(post.data.brand) : undefined;
---

<BaseLayout
  title={`${post.data.title} - Blog26`}
  description={post.data.description}
  image={post.data.image}
>
  <article class="review" data-pagefind-body data-pagefind-meta={`tags:${post.data.tags.join(', ')}${post.data.brand ? `, brand:${post.data.brand}` : ''}`}>
    <header>
      <h1>{post.data.title}</h1>
      <div class="meta">
        <time datetime={post.data.publishDate.toISOString()}>
          {post.data.publishDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        {post.data.brand && brandSlug && (
          <a href={`/reviews/brand/${brandSlug}`} class="brand">{post.data.brand}</a>
        )}
        {post.data.rating && (
          <span class="rating">{'★'.repeat(post.data.rating)}{'☆'.repeat(5 - post.data.rating)}</span>
        )}
      </div>
      <TagList tags={post.data.tags} />
    </header>

    {post.data.image && (
      <img
        src={post.data.image}
        alt={post.data.imageAlt || post.data.title}
        class="featured-image"
      />
    )}

    <div class="content">
      <Content />
    </div>
  </article>

  <nav class="back">
    <a href="/reviews">&larr; Back to Reviews</a>
  </nav>
</BaseLayout>

<style>
  .review {
    max-width: 65ch;
    margin: 0 auto;
  }

  header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    color: var(--color-muted);
    margin-bottom: 1rem;
  }

  .brand {
    font-weight: 500;
    color: inherit;
    text-decoration: none;
  }

  .brand:hover {
    text-decoration: underline;
  }

  .rating {
    color: #f59e0b;
  }

  .featured-image {
    width: 100%;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .content {
    line-height: 1.8;
  }

  .content :global(h2) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content :global(h3) {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .content :global(img) {
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-muted);
  }

  .back {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .back a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .back a:hover {
    text-decoration: underline;
  }
</style>
