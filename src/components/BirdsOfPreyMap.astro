    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 1rem;
  }

  #birds-map {
    height: 500px;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    overflow: hidden;
  }

  /* Species Panel */
  .birds-species-panel {
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .birds-species-panel h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .birds-panel-subtitle {
    font-size: 0.8125rem;
    color: var(--color-muted);
    margin-bottom: 0.75rem;
  }

  .birds-species-list {
    flex: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .species-list-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 0.75rem;
    background: white;
