    background: #fff7ed;
    border-color: #fed7aa;
    cursor: pointer;
    transition: all 0.2s;
  }

  .wc-has-workout:hover {
    background: #ffedd5;
    border-color: #fdba74;
    box-shadow: 0 2px 8px rgba(251, 146, 60, 0.2);
  }

  .wc-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #f97316;
  }

  .wc-today .wc-day-num {
    background: var(--color-accent);
    color: white;
    width: 1.75rem;
    height: 1.75rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* ── List View ── */
