---
// WorkoutCalendar — fetches workout data from a public Google Sheet
// and renders an interactive calendar with Calendar/List view toggle.
---

<div id="workout-calendar">
  <div id="wc-loading" class="wc-message">Loading workout data...</div>
  <div id="wc-error" class="wc-message wc-error" style="display:none"></div>

  <div id="wc-calendar" style="display:none">
    <!-- Search -->
    <div class="wc-search">
      <svg class="wc-search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input type="text" id="wc-search-input" placeholder="Search workouts (e.g., RDL, squat, bench)..." />
      <button id="wc-search-clear" class="wc-search-clear" style="display:none" aria-label="Clear search">&times;</button>
    </div>

    <!-- Search Results -->
    <div id="wc-search-results" class="wc-search-results" style="display:none">
      <div class="wc-search-results-header">
        <span id="wc-search-count"></span>
        <button id="wc-search-back" class="wc-search-back">Back to calendar</button>
      </div>
      <div id="wc-search-list" class="wc-list"></div>
    </div>

    <!-- Header: View Toggle + Month Nav -->
    <div id="wc-header" class="wc-header">
      <div class="wc-view-toggle">
        <button id="wc-view-calendar" class="wc-view-btn active" aria-label="Calendar view">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span>Calendar</span>
        </button>
        <button id="wc-view-list" class="wc-view-btn" aria-label="List view">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="8" y1="6" x2="21" y2="6"></line>
            <line x1="8" y1="12" x2="21" y2="12"></line>
            <line x1="8" y1="18" x2="21" y2="18"></line>
            <line x1="3" y1="6" x2="3.01" y2="6"></line>
            <line x1="3" y1="12" x2="3.01" y2="12"></line>
            <line x1="3" y1="18" x2="3.01" y2="18"></line>
          </svg>
          <span>List</span>
        </button>
      </div>

      <nav class="wc-nav">
        <button id="wc-prev" aria-label="Previous month">&larr;</button>
        <span id="wc-month-label"></span>
        <button id="wc-next" aria-label="Next month">&rarr;</button>
      </nav>
    </div>

    <!-- Calendar View -->
    <div id="wc-calendar-view">
      <div class="wc-day-headers">
        <span>Sun</span><span>Mon</span><span>Tue</span><span>Wed</span><span>Thu</span><span>Fri</span><span>Sat</span>
      </div>
      <div id="wc-grid" class="wc-grid"></div>
    </div>

    <!-- List View -->
    <div id="wc-list-view" style="display:none">
      <div id="wc-list" class="wc-list"></div>
      <p id="wc-list-empty" class="wc-list-empty" style="display:none">No workouts this month.</p>
    </div>
  </div>

  <!-- Modal -->
  <div id="wc-modal" class="wc-modal" style="display:none">
    <div class="wc-modal-backdrop"></div>
    <div class="wc-modal-content">
      <div class="wc-modal-header">
        <button id="wc-modal-prev" class="wc-modal-nav" aria-label="Previous workout">&larr;</button>
        <strong id="wc-modal-date"></strong>
        <button id="wc-modal-next" class="wc-modal-nav" aria-label="Next workout">&rarr;</button>
        <button id="wc-modal-close" class="wc-modal-close" aria-label="Close">&times;</button>
      </div>
      <div class="wc-modal-body">
        <pre id="wc-modal-text"></pre>
      </div>
    </div>
  </div>
</div>

<script>
  const SHEET_URL =
    'https://docs.google.com/spreadsheets/d/1hW4Rid3jkdyc54qQfsZGUROKRQ6Zh5lMlhRZ7UdPQCI/gviz/tq?tqx=out:csv';

  /* ── CSV parser (handles quoted multi-line fields) ── */
  function parseCSV(text: string): string[][] {
    const rows: string[][] = [];
    let i = 0;
    while (i < text.length) {
      const row: string[] = [];
      while (i < text.length) {
        let cell = '';
        if (text[i] === '"') {
          i++;
          while (i < text.length) {
            if (text[i] === '"') {
              if (i + 1 < text.length && text[i + 1] === '"') {
                cell += '"';
                i += 2;
              } else {
                i++;
                break;
              }
            } else {
              cell += text[i++];
            }
          }
        } else {
          while (i < text.length && text[i] !== ',' && text[i] !== '\n' && text[i] !== '\r') {
            cell += text[i++];
          }
        }
        row.push(cell);
        if (i < text.length && text[i] === ',') {
          i++;
        } else {
          break;
        }
      }
      while (i < text.length && (text[i] === '\r' || text[i] === '\n')) i++;
      rows.push(row);
    }
    return rows;
  }

  /* ── Date helpers ── */
  function toKey(d: Date): string {
    const y = d.getFullYear();
    const m = String(d.getMonth() + 1).padStart(2, '0');
    const day = String(d.getDate()).padStart(2, '0');
    return `${y}-${m}-${day}`;
  }

  function formatDate(key: string): string {
    const d = new Date(key + 'T00:00:00');
    return d.toLocaleDateString('en-US', {
      weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    });
  }

  const MONTHS = [
    'January','February','March','April','May','June',
    'July','August','September','October','November','December',
  ];

  /* ── State ── */
  let workouts: Map<string, string> = new Map();
  let sortedKeys: string[] = []; // all workout keys sorted chronologically
  let viewYear: number;
  let viewMonth: number;
  let currentView: 'calendar' | 'list' = 'calendar';
  let currentModalKey: string | null = null;

  /* ── DOM refs ── */
  const elLoading = document.getElementById('wc-loading')!;
  const elError = document.getElementById('wc-error')!;
  const elCalendar = document.getElementById('wc-calendar')!;
  const elHeader = document.getElementById('wc-header')!;
  const elLabel = document.getElementById('wc-month-label')!;
  const elGrid = document.getElementById('wc-grid')!;
  const elCalendarView = document.getElementById('wc-calendar-view')!;
  const elListView = document.getElementById('wc-list-view')!;
  const elList = document.getElementById('wc-list')!;
  const elListEmpty = document.getElementById('wc-list-empty')!;
  const elModal = document.getElementById('wc-modal')!;
  const elModalDate = document.getElementById('wc-modal-date')!;
  const elModalText = document.getElementById('wc-modal-text')!;
  const elViewCalendar = document.getElementById('wc-view-calendar')!;
  const elViewList = document.getElementById('wc-view-list')!;
  const elSearchInput = document.getElementById('wc-search-input') as HTMLInputElement;
  const elSearchClear = document.getElementById('wc-search-clear')!;
  const elSearchResults = document.getElementById('wc-search-results')!;
  const elSearchList = document.getElementById('wc-search-list')!;
  const elSearchCount = document.getElementById('wc-search-count')!;

  /* ── Get workout keys for current month ── */
  function getMonthKeys(): string[] {
    const prefix = `${viewYear}-${String(viewMonth + 1).padStart(2, '0')}`;
    return sortedKeys.filter(k => k.startsWith(prefix));
  }

  /* ── Render calendar grid ── */
  function renderCalendar() {
    elLabel.textContent = `${MONTHS[viewMonth]} ${viewYear}`;
    elGrid.innerHTML = '';

    const first = new Date(viewYear, viewMonth, 1);
    const startDow = first.getDay();
    const daysInMonth = new Date(viewYear, viewMonth + 1, 0).getDate();
    const todayKey = toKey(new Date());

    // Leading empty cells
    for (let i = 0; i < startDow; i++) {
      const cell = document.createElement('div');
      cell.className = 'wc-cell wc-empty';
      elGrid.appendChild(cell);
    }

    for (let d = 1; d <= daysInMonth; d++) {
      const key = toKey(new Date(viewYear, viewMonth, d));
      const hasWorkout = workouts.has(key);
      const cell = document.createElement('div');
      cell.className = 'wc-cell';

      if (key === todayKey) cell.classList.add('wc-today');

      const num = document.createElement('span');
      num.className = 'wc-day-num';
      num.textContent = String(d);
      cell.appendChild(num);

      if (hasWorkout) {
        cell.classList.add('wc-has-workout');
        const dot = document.createElement('span');
        dot.className = 'wc-dot';
        cell.appendChild(dot);
        cell.addEventListener('click', () => openModal(key));
      }

      elGrid.appendChild(cell);
    }
  }

  /* ── Render list view ── */
  function renderList() {
    elLabel.textContent = `${MONTHS[viewMonth]} ${viewYear}`;
    elList.innerHTML = '';

    const monthKeys = getMonthKeys();

    if (monthKeys.length === 0) {
      elListEmpty.style.display = 'block';
      return;
    }

    elListEmpty.style.display = 'none';

    for (const key of monthKeys) {
      const workout = workouts.get(key)!;
      const item = document.createElement('article');
      item.className = 'wc-list-item';

      const header = document.createElement('div');
      header.className = 'wc-list-header';

      const date = document.createElement('time');
      date.className = 'wc-list-date';
      date.textContent = formatDate(key);
      header.appendChild(date);

      const expand = document.createElement('button');
      expand.className = 'wc-list-expand';
      expand.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/></svg>';
      expand.setAttribute('aria-label', 'View in modal');
      expand.addEventListener('click', (e) => {
        e.stopPropagation();
        openModal(key);
      });
      header.appendChild(expand);

      item.appendChild(header);

      const content = document.createElement('pre');
      content.className = 'wc-list-content';
      content.textContent = workout;
      item.appendChild(content);

      elList.appendChild(item);
    }
  }

  /* ── Render based on current view ── */
  function render() {
    if (currentView === 'calendar') {
      renderCalendar();
    } else {
      renderList();
    }
  }

  /* ── Modal ── */
  function openModal(key: string) {
    currentModalKey = key;
    const workout = workouts.get(key);
    if (!workout) return;

    elModalDate.textContent = formatDate(key);
    elModalText.textContent = workout;
    elModal.style.display = 'flex';
    document.body.style.overflow = 'hidden';
    updateModalNav();
  }

  function closeModal() {
    elModal.style.display = 'none';
    document.body.style.overflow = '';
    currentModalKey = null;
  }

  function updateModalNav() {
    const prevBtn = document.getElementById('wc-modal-prev') as HTMLButtonElement;
    const nextBtn = document.getElementById('wc-modal-next') as HTMLButtonElement;

    if (!currentModalKey) return;

    const idx = sortedKeys.indexOf(currentModalKey);
    prevBtn.disabled = idx <= 0;
    nextBtn.disabled = idx >= sortedKeys.length - 1;
  }

  function navigateModal(dir: -1 | 1) {
    if (!currentModalKey) return;
    const idx = sortedKeys.indexOf(currentModalKey);
    const newIdx = idx + dir;
    if (newIdx >= 0 && newIdx < sortedKeys.length) {
      openModal(sortedKeys[newIdx]);
    }
  }

  /* ── View toggle ── */
  function setView(view: 'calendar' | 'list') {
    currentView = view;
    elViewCalendar.classList.toggle('active', view === 'calendar');
    elViewList.classList.toggle('active', view === 'list');
    elCalendarView.style.display = view === 'calendar' ? 'block' : 'none';
    elListView.style.display = view === 'list' ? 'block' : 'none';
    render();
  }

  /* ── Event listeners ── */
  document.getElementById('wc-prev')!.addEventListener('click', () => {
    viewMonth--;
    if (viewMonth < 0) { viewMonth = 11; viewYear--; }
    render();
  });

  document.getElementById('wc-next')!.addEventListener('click', () => {
    viewMonth++;
    if (viewMonth > 11) { viewMonth = 0; viewYear++; }
    render();
  });

  elViewCalendar.addEventListener('click', () => setView('calendar'));
  elViewList.addEventListener('click', () => setView('list'));

  document.getElementById('wc-modal-close')!.addEventListener('click', closeModal);
  document.querySelector('.wc-modal-backdrop')!.addEventListener('click', closeModal);
  document.getElementById('wc-modal-prev')!.addEventListener('click', () => navigateModal(-1));
  document.getElementById('wc-modal-next')!.addEventListener('click', () => navigateModal(1));

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (elModal.style.display === 'flex') {
      if (e.key === 'Escape') closeModal();
      if (e.key === 'ArrowLeft') navigateModal(-1);
      if (e.key === 'ArrowRight') navigateModal(1);
    }
  });

  /* ── Search ── */
  function performSearch(query: string) {
    const q = query.toLowerCase().trim();
    if (!q) {
      exitSearch();
      return;
    }

    // Search all workouts
    const results: Array<{ key: string; workout: string }> = [];
    for (const [key, workout] of workouts) {
      if (workout.toLowerCase().includes(q)) {
        results.push({ key, workout });
      }
    }

    // Sort by date (newest first)
    results.sort((a, b) => b.key.localeCompare(a.key));

    // Show results
    elSearchResults.style.display = 'block';
    elHeader.style.display = 'none';
    elCalendarView.style.display = 'none';
    elListView.style.display = 'none';
    elSearchClear.style.display = 'block';

    elSearchCount.textContent = `${results.length} result${results.length !== 1 ? 's' : ''} for "${query}"`;
    elSearchList.innerHTML = '';

    if (results.length === 0) {
      elSearchList.innerHTML = '<p class="wc-list-empty">No workouts found matching your search.</p>';
      return;
    }

    for (const { key, workout } of results) {
      const item = document.createElement('article');
      item.className = 'wc-list-item';

      const header = document.createElement('div');
      header.className = 'wc-list-header';

      const date = document.createElement('time');
      date.className = 'wc-list-date';
      date.textContent = formatDate(key);
      header.appendChild(date);

      const expand = document.createElement('button');
      expand.className = 'wc-list-expand';
      expand.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/></svg>';
      expand.setAttribute('aria-label', 'View in modal');
      expand.addEventListener('click', (e) => {
        e.stopPropagation();
        openModal(key);
      });
      header.appendChild(expand);

      item.appendChild(header);

      // Highlight matching text
      const content = document.createElement('pre');
      content.className = 'wc-list-content';
      content.innerHTML = highlightMatches(workout, q);
      item.appendChild(content);

      elSearchList.appendChild(item);
    }
  }

  function highlightMatches(text: string, query: string): string {
    const escaped = query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    const regex = new RegExp(`(${escaped})`, 'gi');
    return text.replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(regex, '<mark>$1</mark>');
  }

  function exitSearch() {
    elSearchInput.value = '';
    elSearchClear.style.display = 'none';
    elSearchResults.style.display = 'none';
    elHeader.style.display = 'flex';
    if (currentView === 'calendar') {
      elCalendarView.style.display = 'block';
    } else {
      elListView.style.display = 'block';
    }
  }

  // Search event listeners
  let searchTimeout: number;
  elSearchInput.addEventListener('input', () => {
    clearTimeout(searchTimeout);
    searchTimeout = window.setTimeout(() => {
      performSearch(elSearchInput.value);
    }, 200);
  });

  elSearchClear.addEventListener('click', exitSearch);
  document.getElementById('wc-search-back')!.addEventListener('click', exitSearch);

  /* ── Fetch & init ── */
  async function init() {
    try {
      const res = await fetch(SHEET_URL);
      if (!res.ok) throw new Error(`HTTP ${res.status}`);
      const csv = await res.text();
      const rows = parseCSV(csv);

      const currentYear = new Date().getFullYear();

      for (let r = 0; r < rows.length; r++) {
        const dateStr = (rows[r][0] || '').trim();
        const workout = (rows[r][1] || '').trim();
        if (!dateStr || !workout) continue;
        const parsed = new Date(`${dateStr}, ${currentYear}`);
        if (isNaN(parsed.getTime())) continue;
        workouts.set(toKey(parsed), workout);
      }

      // Sort keys chronologically
      sortedKeys = Array.from(workouts.keys()).sort();

      const now = new Date();
      viewYear = now.getFullYear();
      viewMonth = now.getMonth();

      elLoading.style.display = 'none';
      elCalendar.style.display = 'block';
      render();
    } catch (err) {
      elLoading.style.display = 'none';
      elError.style.display = 'block';
      elError.textContent = 'Unable to load workout data. Please try again later.';
    }
  }

  init();
</script>

<style is:global>
